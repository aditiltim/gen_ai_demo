<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog id="_IDNewDialog" class="sapUiResponsiveContentPadding" title="Email Content"  state="Information"
		beforeOpen="onBeforeFilterDialogOpen" contentWidth="50%">
		<content>
			<VBox id="_IDGenVBox1">
				<Label id="_IDGenLabel1" text="Subject:"/>
				<!-- <Text text="{oTableModel>/Sales_Order}"/> -->
				 <Text id="_IDGenText1" text="{oEmailModel>/subject}"/> 
				<!-- <Label text="Body:"/> -->
				<TextArea id="_IDGenTextArea1" value="{oEmailModel>/body}" rows="10" width="100%" height="100%" editable="false"/>
				
			</VBox>
		</content>
		<buttons>
			<Button id="_IDGenButton1" text="Send"  press="onSendSuccess" type="Emphasized"/> 
			<Button id="_IDGenButton2" text="Close" press="onNewDialogCancel" type="Default"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>