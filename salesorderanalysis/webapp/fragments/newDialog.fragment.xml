<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog id="_IDNewDialog" class="sapUiResponsiveContentPadding" title="Email Content"  state="Information"
		beforeOpen="onBeforeFilterDialogOpen">
		<content>
			<VBox id="_IDGenVBox1">
				<Label text="Subject:"/>
				<!-- <Text text="{oTableModel>/Sales_Order}"/> -->
				 <Text text="{oEmailModel>/subject}"/> 
				<Label text="Body:"/>
				<TextArea value="{oEmailModel>/body}" rows="10" width="200px" editable="false"/>
			</VBox>
		</content>
		<buttons>
			<!-- <Button id="_IDGenButton1" text="Send"  press="onEmailPress" type="Emphasized"/> -->
			<Button id="_IDGenButton2" text="Close" press="onNewDialogCancel" type="Default"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>