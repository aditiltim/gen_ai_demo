                                                        </viz.data:FlattenedDataset>
                                                    </viz:dataset>
                                                    <viz:feeds>
                                                        <viz.feeds:FeedItem id="_IDGenFeedItem18291" type="Measure" uid="valueAxis" values="ProdductionOrderCount" />
                                                        <viz.feeds:FeedItem id="_IDGenFeedItem22301" type="Dimension" uid="categoryAxis" values="ProductionOrder" />    
                                                        <viz.feeds:FeedItem id="_IDGenFeedItem2286" type="Dimension" uid="color" values="Status" />
                                                    </viz:feeds>
                                                </viz:VizFrame>
                                            </chart:content>
