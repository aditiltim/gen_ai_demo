                                                        <viz.feeds:FeedItem id="_IDGenFeedItem29231" type="Dimension" uid="categoryAxis" values="Month" />
                                                        <viz.feeds:FeedItem id="_IDGenFeedItem2928" type="Dimension" uid="color" values="Plant" />
