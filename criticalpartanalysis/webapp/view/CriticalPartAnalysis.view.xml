              <layout:VerticalLayout id="_IDGenVerticalLayout2" width="100%" visible="false">
                                 
                                     <chart:ChartContainer id="chartContainer7"  showFullScreen="true">
                                        <chart:ChartContainerContent id="_IDGenChartContainerContent275" icon="sap-icon://horizontal-stacked-chart" title="Stacked_bar Chart">
                                            <chart:content>
                                                <viz:VizFrame
                                                   id="idVizFrame1" 
                                                    height="300px"   
                                                    width="100%"
                                                    uiConfig="{applicationSet:'fiori'}"
                                                    vizProperties="{plotArea: { drawingEffect: 'glossy'},
                                                        title:{ text:'Sales Order'},dataLabel:{visible:true,showTotal:true}}"
                                                    vizType="column"
                                                    legendVisible="true"
                                                    visible="true"
                                                     selectData="onClickSalesOrder"
                                                >
                                                    <viz:dataset>
                                                        <viz.data:FlattenedDataset id="_IDGenFlattenedDataset14122" data="{appModel>/}" >
                                                            <viz.data:dimensions>
                                                                <viz.data:DimensionDefinition id="_IDGenDimensionDefinition11221" name="Sales_Order" value="{Sales_Order}" />
                                                                 <viz.data:DimensionDefinition id="_IDGenDimensionDefinition110221" name="Status" value="{Status}" />
                                                            </viz.data:dimensions>
                                                            <viz.data:measures>
                                                                <viz.data:MeasureDefinition id="_IDGenMeasureDefinition2522151" name="SalesOrderCount" value="{SalesOrderCount}" />
                                                            </viz.data:measures>
                                                        </viz.data:FlattenedDataset>
                                                    </viz:dataset>
                                                    <viz:feeds>
                                                        <viz.feeds:FeedItem id="_IDGenFeedItem18521" type="Measure" uid="valueAxis" values="SalesOrderCount" />
                                                      <viz.feeds:FeedItem id="_IDGenFeedItem22331" type="Dimension" uid="categoryAxis" values="Sales_Order" />    
                                                        <viz.feeds:FeedItem id="_IDGenFeedItem2281" type="Dimension" uid="color" values="Status" /> 
                                                        
                                                    </viz:feeds>
                                                </viz:VizFrame>
                                            </chart:content>
                                        </chart:ChartContainerContent>
                                    </chart:ChartContainer>
                                </layout:VerticalLayout> 
                                             
              
                    <layout:VerticalLayout id="_IDGenVerticalLayout3" width="100%" visible="true">
                                 
                                     <chart:ChartContainer id="chartContainer74"  showFullScreen="true">
