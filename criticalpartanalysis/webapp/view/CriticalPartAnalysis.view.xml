                                                <viz:VizFrame
                                                    id="idVizFrame1" 
                                                    height="300px"   
                                                    width="100%"
                                                    uiConfig="{applicationSet:'fiori'}"
                                                    vizProperties="{plotArea: { drawingEffect: 'glossy'}, 
                                                    title:{ text:'Order Priority for last 12 months'},dataLabel:{visible:true,showTotal:true}}"
                                                    vizType="column"
                                                    legendVisible="true"
                                                    visible="true"
                                                >
                                                    <viz:dataset>
                                                        <viz.data:FlattenedDataset id="_IDGenFlattenedDataset14122" data="{Data>/Records}">
                                                            <viz.data:dimensions>
                                                                <viz.data:DimensionDefinition id="_IDGenDimensionDefinition11223" name="Month" value="{Month}" />
                                                                <viz.data:DimensionDefinition id="_IDGenDimensionDefinition11221" name="Plant" value="{Plant}" />
                                                            </viz.data:dimensions>
                                                            <viz.data:measures>
