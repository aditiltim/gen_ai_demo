<mvc:View controllerName="hac2build.productionorderanalysis.controller.productionOrder"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page" showHeader="false" enableScrolling="true">
        <content>
            <!-- Table for production orders -->
            <Table id="productionOrderTable" sticky="HeaderToolbar,ColumnHeaders,InfoToolbar" mode="MultiSelect" alternateRowColors="true">
                <!-- HeaderToolbar -->
                <headerToolbar >
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <content>
                            <Title id="tableTitle" text="{i18n>tableTitle}" level="H2"/>
                            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            <Button id="rescheduleProductionOrder" text="{i18n>reschedulePO}"/>
                            <Button id="availabilityCheck" text="{i18n>availabilityCheck}" press=".onAvailabilityCheckPress"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="column1" hAlign="Center"> 
                        <Label id="label1" design="Bold" text="BOM Component" wrapping="true"/>
                    </Column>
                    <Column id="column2" hAlign="Center"> 
                        <Label id="label2" design="Bold" text="Stock Type"/>
                    </Column>
                    <Column id="column3" hAlign="Center"> 
                        <Label id="label3" design="Bold" text="Operation"/>
                    </Column>
                    <Column id="column4" hAlign="Center"> 
                        <Label id="label4" design="Bold" text="BOM Component" wrapping="true"/>
                    </Column>
                    <Column id="column5" hAlign="Center"> 
                        <Label id="label5" design="Bold" text="Procured/In house" wrapping="true"/>
                    </Column>
                    <Column id="column6" hAlign="Center"> 
                        <Label id="label6" design="Bold" text="Vendor"/>
                    </Column>
                    <Column id="column7" hAlign="Center"> 
                        <Label id="label7" design="Bold" text="PO Number"/>
                    </Column>
                    <Column id="column8" hAlign="Center"> 
                        <Label id="label8" design="Bold" text="Critical Item"/>
                    </Column>
                    <Column id="column9" hAlign="Center"> 
                        <Label id="label9" design="Bold" text="SAP Planned Delivery" wrapping="true"/>
                    </Column>
                    <Column id="column10" hAlign="Center"> 
                        <Label id="label10" design="Bold" text="AI Computed Date" wrapping="true"/>
                    </Column>
                    <Column id="column11" hAlign="Center"> 
                        <Label id="label11" design="Bold" text="Confirmed by Purchasing" wrapping="true"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier1" title="30"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier2" title="Stock Item"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier3" title="10020"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier4" title="102-300"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier5" title="Procured"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier6" title="3000"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier7" title="900002"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier8" title="X"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier9" title="30.10.2023"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier10" title="05.11.2023"/>
                            <ObjectIdentifier id="_IDGenObjectIdentifier11" title="Yes"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
